<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/directory_item_click_target"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:paddingTop="8dp"
  android:paddingBottom="8dp"
  android:background="?attr/selectableItemBackground"
  android:minHeight="56dp">

  <androidx.appcompat.widget.AppCompatImageView
    android:layout_width="48dp"
    android:layout_height="48dp"
    android:padding="12dp"
    android:rotation="90"
    android:src="@drawable/ic_baseline_subdirectory_arrow_left_24"
    android:tint="?attr/colorControlNormal"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toStartOf="@id/directory_item_title"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <androidx.appcompat.widget.AppCompatTextView
    android:id="@+id/directory_item_title"
    style="@style/AppTextHeadline6"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="72dp"
    android:layout_marginEnd="16dp"
    android:maxLines="2"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:text="Purcahse groceries" />

</androidx.constraintlayout.widget.ConstraintLayout>
